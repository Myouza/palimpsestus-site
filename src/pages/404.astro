---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { ui } from '@/config/site';
---

<BaseLayout title={ui.error.notFoundTitle}>
  <main class="flex-1 max-w-2xl mx-auto w-full px-6 pt-32 pb-12 text-center">
    <p class="text-6xl mb-6" style="color: var(--text-muted); opacity: 0.3;">{ui.error.notFoundCode}</p>
    <h1 class="text-xl font-semibold mb-4" style="color: var(--text);">{ui.error.notFoundTitle}</h1>
    <p class="mb-8" style="color: var(--text-muted);">{ui.error.notFoundMessage}</p>
    <a href="/" class="inline-block px-6 py-2 rounded text-sm transition-all duration-200 hover:opacity-80"
      style="background: var(--bg-surface); color: var(--accent); border: 1px solid var(--border);">
      {ui.error.backToHome}
    </a>
  </main>
</BaseLayout>
